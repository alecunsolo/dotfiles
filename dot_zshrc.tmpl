# Set the directory we want to store zinit and plugins
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"

# Download Zinit, if it's not there yet
if [ ! -d "$ZINIT_HOME" ]; then
    mkdir -p "$(dirname $ZINIT_HOME)"
    git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
fi

# Source/Load zinit
source "${ZINIT_HOME}/zinit.zsh"

# OMZ plugins configuration
zstyle ':omz:plugins:eza' 'dirs-first' yes
zstyle ':omz:plugins:eza' 'git-status' yes
zstyle ':omz:plugins:eza' 'show-group' yes

# Add in zsh plugins
zinit light zsh-users/zsh-syntax-highlighting
zinit light zsh-users/zsh-completions
zinit light zsh-users/zsh-autosuggestions

# Add in snippets
# OMZ Libraries
zinit snippet OMZL::clipboard.zsh
zinit snippet OMZL::git.zsh
# OMZ plugins
zinit snippet OMZP::command-not-found
zinit snippet OMZP::direnv
zinit snippet OMZP::eza
zinit snippet OMZP::git
zinit snippet OMZP::gitignore
zinit snippet OMZP::gnu-utils
zinit snippet OMZP::gpg-agent
zinit snippet OMZP::kubectl
zinit snippet OMZP::kubectx
zinit snippet OMZP::pyenv
zinit snippet OMZP::sudo
{{ if eq .chezmoi.os "linux" -}}
zinit snippet OMZP::systemd
{{ end -}}
zinit snippet OMZP::vi-mode

# Custom fpath
(( ${fpath[(Ie)$HOME/.zsh/functions]} )) || fpath=("$HOME/.zsh/functions" $fpath)
(( ${fpath[(Ie)$HOME/.zsh/completions]} )) || fpath=("$HOME/.zsh/completions" $fpath)

# Keybindings
bindkey '^y' autosuggest-accept
bindkey '^p' history-search-backward
bindkey '^n' history-search-forward

# History
HISTSIZE=5000
HISTFILE=~/.zsh_history
SAVEHIST=$HISTSIZE
HISTDUP=erase
setopt appendhistory
setopt sharehistory
setopt hist_ignore_space
setopt hist_ignore_all_dups
setopt hist_save_no_dups
setopt hist_ignore_dups
setopt hist_find_no_dups

# Directory stuff
setopt autocd

# Completion styling
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Za-z}' # Case-insensitive completion
zstyle ':completion:*' list-colors "${(s.:.)LS_COLORS}" # Colored completion output

# Comments on interactive shell
setopt interactive_comments

# Functions used in the scripts
__log() {
    print "$@" >&2
}

__die() {
    __log "$@"
    return 1
}

# Local plugins
for file in $HOME/.zsh/plugins/*.plugin.zsh(N.) ; do
    source $file
done

# Set the directory we want to store zsh-transient-prompt
TPROMPT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zsh-transient-prompt/zsh-transient-prompt.git"
# Download zsh-transient-prompt, if it's not there yet
if [ ! -d "$TPROMPT_HOME" ]; then
    mkdir -p "$(dirname $TPROMPT_HOME)"
    git clone https://github.com/olets/zsh-transient-prompt.git "$TPROMPT_HOME"
fi
. "$TPROMPT_HOME/transient-prompt.zsh-theme"

# Starship
export STARSHIP_CONFIG=~/.config/starship/config.toml
eval "$(starship init zsh)"
# https://github.com/starship/starship/issues/888#issuecomment-3597694479
TRANSIENT_PROMPT_PROMPT='$(starship prompt --terminal-width="$COLUMNS" --keymap="${KEYMAP:-}" --status="$STARSHIP_CMD_STATUS" --pipestatus="${STARSHIP_PIPE_STATUS[*]}" --cmd-duration="${STARSHIP_DURATION:-}" --jobs="$STARSHIP_JOBS_COUNT")'
TRANSIENT_PROMPT_RPROMPT='$(starship prompt --right --terminal-width="$COLUMNS" --keymap="${KEYMAP:-}" --status="$STARSHIP_CMD_STATUS" --pipestatus="${STARSHIP_PIPE_STATUS[*]}" --cmd-duration="${STARSHIP_DURATION:-}" --jobs="$STARSHIP_JOBS_COUNT")'
TRANSIENT_PROMPT_TRANSIENT_PROMPT='$(starship module character)'

# Load completions
autoload -Uz compinit && compinit
zinit cdreplay -q

# Local configuration
if [[ -f ~/.zshrc.local ]] ; then
    source ~/.zshrc.local
fi

# Local stuff
# Editor variable
if (( $+commands[nvim] )); then
    export EDITOR="$commands[nvim]"
elif (( $+commands[vim] )); then
    export EDITOR="$commands[vim]"
else
    export EDITOR=vi
fi

# Set title
autoload -Uz add-zsh-hook
_precmd_title() {
  print -Pn "\e]0;%~ - zsh\a"
}
add-zsh-hook precmd _precmd_title

